<% include ../partials/header %>

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="jumbotron dmcc-jumbo">
					<h2>Edit <%= category.name %> properties</h2>
				</div>				
			</div>
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<form action="/cms/categories/<%= category._id %>?_method=PUT" method="POST">
							<div class="form-group">
								<label>Name: </label>
								<input class="form-control" type="text" name="category[name]" value="<%= category.name %>">
							</div>
							<div class="form-group">
								<label>URL: </label>
								<div class="input-group">
			    					<span class="input-group-addon" id="url-addon"><strong>http://dmcc.com.ua/</strong></span>
			    					<input class="form-control" type="text" name="category[url]" aria-describedby="url-addon" value="<%= category.url %>">
			    				</div>
							</div>
			    			<p>Please, pay attention to that URL and Name of category corresponding each other. Usually an <strong>URL is a lower-cased name</strong> of the page.</p>
			    			<div class="form-group">
			    				<input class="btn btn-primary btn-lg" type="submit" value="Save changes" style="float: right;">
			    			</div>
						</form>
						<a class="btn  btn-lg btn-primary-inversed" href="/cms/categories/<%= category._id %>"><i class="glyphicon glyphicon-chevron-left"></i> Back</a>							
					</div>
				</div>
			</div>	
		</div>
	</div>

<% include ../partials/footer %>